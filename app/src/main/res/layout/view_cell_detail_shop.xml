<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/shopImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/shopName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_store_mall_directory_black_24dp" />


    <TextView
        android:id="@+id/shopName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="お店の名前"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/shopImage"
        app:layout_constraintTop_toTopOf="@id/shopImage" />

    <TextView
        android:id="@+id/genreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="ジャンル"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/shopName"
        app:layout_constraintTop_toBottomOf="@id/shopName" />


    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="28dp"
        android:text="@string/cell_detail_total_score"
        app:layout_constraintStart_toStartOf="@id/shopName"
        app:layout_constraintTop_toBottomOf="@id/shopName" />

    <ImageView
        android:id="@+id/favoriteIcon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_nav_favorite"
        android:tint="@color/colorPrimary"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/genreTextView"
        app:layout_constraintBottom_toBottomOf="@id/scoreTextView"
        app:layout_constraintEnd_toEndOf="parent"/>

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/totalRatingScore"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toStartOf="@id/scoreText"
        app:layout_constraintStart_toStartOf="@id/shopName"
        app:layout_constraintTop_toBottomOf="@id/scoreTextView" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:gravity="bottom"
        android:text="(4.8)"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/totalRatingScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/totalRatingScore" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/shopImage"
        app:layout_constraintTop_toBottomOf="@id/totalRatingScore">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:text="@string/assessment_category_good"
                android:textSize="20sp" />

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/goodRatingStar"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="3"
                android:rating="3.0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:text="@string/assessment_category_near"
                android:textSize="20sp" />

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/distanceRatingStar"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="3"
                android:rating="3.0" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:text="@string/assessment_category_cheep"
                android:textSize="20sp" />

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/cheepRatingStar"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="3"
                android:rating="3.0" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>