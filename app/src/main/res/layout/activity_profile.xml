<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="profileViewModel"
            type="com.takhaki.schoolfoodnavigator.profile.ProfileViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profile.ProfileActivity">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iconImageView"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/shape_rounded_select_icon"
            android:src="@drawable/ic_default_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{profileViewModel.userName}"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iconImageView" />

        <TextView
            style="@style/profile_title"
            android:text="@string/profile_point_title"
            app:layout_constraintBottom_toTopOf="@id/pointText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@id/pointText"
            app:layout_constraintEnd_toStartOf="@id/pointText"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/coin_animation"
            app:lottie_speed="2" />

        <TextView
            android:id="@+id/pointText"
            style="@style/profile_big_content"
            android:text="@{@string/nav_point_format(profileViewModel.userPoint.toString())}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userNameTextView" />

        <TextView
            style="@style/profile_title"
            android:text="@string/profile_current_title"
            app:layout_constraintBottom_toTopOf="@id/shogoTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@id/shogoTextView"
            app:layout_constraintEnd_toStartOf="@id/shogoTextView"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/reward_trophy_animation"
            app:lottie_speed="1" />

        <TextView
            android:id="@+id/shogoTextView"
            style="@style/profile_big_content"
            android:layout_marginStart="24dp"
            android:text="@{profileViewModel.userGradeTitle}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pointText" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>